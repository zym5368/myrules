{
    "manifest_version": 3,
    "name": "__MSG_extName__",
    "version": "1.0.1",
    "description": "__MSG_extDescription__",
    "default_locale": "zh_CN",
    "action": {
      "default_icon": {
        "16": "logo.16.png",
        "48": "logo.48.png",
        "128": "logo.128.png"
      },
      "default_title": "__MSG_extTitle__"
    },
    "permissions": [
      "activeTab",
      "tabs",
      "scripting",
      "storage",
      "contextMenus",
      "notifications"
    ],
    "sandbox": {
      "pages": ["sandbox.html"]
    },
    "side_panel": {
      "default_path": "index.html"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "host_permissions": [
      "<all_urls>"
    ]
  }
  